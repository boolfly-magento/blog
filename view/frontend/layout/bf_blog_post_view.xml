<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="bf_blog_default"/>
    <body>
        <referenceContainer name="page.main.title" remove="true"/>
        <referenceContainer name="content">
            <block class="Boolfly\Blog\Block\PostContent" name="blog.post.content"
                   template="Boolfly_Blog::blog/post/content.phtml" ifconfig="blog_setting/general/enable"/>
        </referenceContainer>
    </body>
</page>